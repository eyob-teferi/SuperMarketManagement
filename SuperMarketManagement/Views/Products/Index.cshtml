
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<SuperMarketManagement.ViewModel.ProductViewModel>

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h3 class="mb-3">Products</h3>
<table class="table table-bordered table-striped">
	<!-- Added table-striped class -->
	<thead>
		<tr>
			<th class="text-center">Name</th>
			<th class="text-center">Category</th>
			<th class="text-center">Price</th>
			<th class="text-center">Quantity</th>
			<th class="text-center"></th>
			<th class="text-center"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var p in Model)
		{
			<tr class="text-center">
				<td>@p.Name</td>
				<td>@p.CategoryName</td>
				<td>$@p.Price</td>
				<td>@p.Quantity</td>
				<td>
					<a asp-controller="Products" asp-action="Edit" asp-route-Id="@p.Id" class="btn btn-link">Edit</a>
				</td>
				<td>
					<form asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id" method="post">
						<button type="submit" class="btn btn-link" onclick="return confirmDelete();">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
<a asp-controller="Products" asp-action="Create" class="btn btn-success">Create Product</a>

@section Scripts
{
	<script>
		function confirmDelete() {
			return confirm("Are you sure you want to delete this product?")
		}
	</script>
}
