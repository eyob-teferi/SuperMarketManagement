*@
@{
}


<h2 class="mb-2">Create Product</h2>

<form asp-controller="Products" asp-action="Create" method="post" class="mb-4">
	<div class="form-group mb-3">
		<label asp-for="CategoryId" class="form-label">Category</label>
		<select asp-for="CategoryId" class="form-control" required>
			<option value="">Select Category</option>
			@foreach (var category in Model.Categories)
			{
				<option value="@category.Id">@category.Name</option>
			}
		</select>
		<span asp-validation-for="CategoryId" class="text-danger"></span> <!-- Validation message -->
	</div>
	<div class="form-group mb-3">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" required/>
		<span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message -->
	</div>

	<div class="form-group mb-3">
		<label asp-for="Price" class="form-label"></label>
		<input asp-for="Price" type="number" class="form-control" required/>
		<span asp-validation-for="Price" class="text-danger"></span> <!-- Validation message -->
	</div>
	<div class="form-group mb-3">
		<label asp-for="Quantity" class="form-label"></label>
		<input asp-for="Quantity" type="number" class="form-control" required/>
		<span asp-validation-for="Quantity" class="text-danger"></span> <!-- Validation message -->
	</div>
	<button type="submit" class="btn btn-primary">Create Product</button>
</form>