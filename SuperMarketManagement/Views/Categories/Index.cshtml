@model IEnumerable<CoreBusiness.Category>

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h3 class="mb-3">Categories</h3>
<table class="table table-bordered table-striped"> <!-- Added table-striped class -->
	<thead>
	<tr>
		<th class="text-center">Name</th>
		<th class="text-center">Description</th>
		<th class="text-center"></th>
		<th class="text-center"></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var category in Model)
	{
		<tr class="text-center">
			<td>@category.Name</td>
			<td>@category.Description</td>
			<td>
				<a asp-controller="Categories" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-link">Edit</a>
			</td>
			<td>
				<form asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" method="post" >
					<button type="submit" class="btn btn-link" onclick="return confirmDelete();">Delete</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>
<a asp-controller="Categories" asp-action="Create" class="btn btn-success">Create Category</a>

@section Scripts
{
	<script>
		function confirmDelete() {
			return confirm("Are you sure you want to delete this category?")
		}
	</script>
}